#set ($contentId = $reserved-article-id.getData())
#set ($contentClass = "multiple-items-" + $contentId)

<style media="screen" type="text/css">
	div.$contentClass h3,
	div.$contentClass ul,
	div.$contentClass ul li {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	div.$contentClass h3 {
		margin-bottom: .5em;
	}

	div.$contentClass ul li.featured-item {
		margin-bottom: 1em;
	}
</style>

<div class="featured-items $contentClass">
	<h3>$item-group-name.getData()</h3>

	<ul class="featured-items-content">
		#foreach ($item in $item-title.getSiblings())
			#set($classOrder = "")

			#set($classOrder = $classOrder + " item-" + $velocityCount)
 			#if($velocityCount == 1)
				#set($classOrder = $classOrder + " first")
			#end
			#if(!$velocityHasNext)
				#set($classOrder = $classOrder + " last")
			#end
			#if($velocityCount == 1 && !$velocityHasNext)
				#set($classOrder = $classOrder + " only")
			#end

			<li class="featured-item $classOrder">
				<h4 class="featured-item-title">

				#if ($item.item-link.getData().length() != 0)
					<a href="$item.item-link.getData()" title="Read $item.getData()">
					$item.getData()</a>
				#else
					$item.getData()
				#end

				</h4>

				<div class="featured-item-content">
					$item.item-body.getData()
				</div>
			</li>
		#end
	</ul>

</div>